<div class="container">

    <div>

        <h1><center>Eat-Da-Burger!</center></h1>

    </div>

    <div class="row mt-4">

        <div class="col-md-6 my-4">

            <div class="card border border-primary">

                <div class="bg-primary text-white">

                    <center>List of Burgers</center>

                </div>



                <div class="card-body">

                    {{#each burgers}}

                    {{#unless devoured}}

                    {{> burgers/burger-block devour=false}}

                    {{/unless}}

                    {{/each}}

                </div>

            </div>

        </div>



        <div class="col-md-6 my-4">

            <div class="card border border-primary devoured-card">

                <div class="bg-primary text-white" id="devoured-card-header">

                   <center>Devoured burgers</center> 

                </div>

                <div class="card-body">

                    {{#each burgers}}

                    {{#if devoured}}

                    {{> burgers/burger-devoured devour=true}}

                    {{/if}}

                    {{/each}}

                </div>

            </div>

        </div>

    </div>



    <div class="row">

        <div class="col-md-12">

            <div class="card border border-primary">

                

                <div class="card-body">

                    <form class="create-form">

                        <div class="form-group">

                            <label for="burger">Add burger here:</label>

                            <input type="text" class="form-control" id="burgerToGo" placeholder="" required>

                        </div>

                        <button class="btn btn-primary" type="submit">Add Burger</button>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>